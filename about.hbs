{{!< page}}
<header id="site-head" {{#if @blog.cover}}style="background-image: url({{@blog.cover}})"{{/if}}>
    <div class="vertical">
        <div id="site-head-content" class="inner">
            {{#if @blog.logo}}<a id="blog-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="Blog Logo" /></a>{{/if}}
            <h1 class="blog-title">{{title}}</h1>
            <h2 class="blog-description">My motivations, technological aspirations, and this site's purpose.</h2>
        </div>
    </div>
</header>
<main class="content" role="main">
    {{#each para}}
        <article class="post">
            <h2>{{heading}}</h2>
            {{#if text}}
                <p>{{text}}</p>
            {{/if}}
        </article>
    {{/each}}
</main>